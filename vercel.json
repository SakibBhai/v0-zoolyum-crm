{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": "@database_url",
    "NEON_NEON_DATABASE_URL": "@database_url",
    "DIRECT_URL": "@database_url",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "NEXTAUTH_URL": "@nextauth_url",
    "NODE_ENV": "production",
    "NEXT_RUNTIME": "nodejs"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "NEON_NEON_DATABASE_URL": "@database_url",
      "DIRECT_URL": "@database_url"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "regions": ["iad1"]
}